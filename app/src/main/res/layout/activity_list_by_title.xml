<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lbtScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:fillViewport="true"
    android:scrollbarSize="8dp"
    android:scrollbars="vertical">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/AtoZbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="AtoZ"
            android:text="@string/AtoZ" />
        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ZtoAbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ZtoA"
            android:text="@string/ZtoA" />
        <TextView
            android:layout_height="25dp"
            android:text="Game Titles Sorted Alphabetically or Reverse"
            android:textAlignment="center">

        </TextView>
        <ListView
            android:id="@+id/lbtList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableLayout>
</ScrollView>